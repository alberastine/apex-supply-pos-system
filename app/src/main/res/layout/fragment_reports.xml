<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_gray"
    tools:context=".admin.ReportsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales Performance Overview"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/totalSalesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/overall_total_sales"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/dailyReportTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/today_s_sales"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/weeklyReportTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_7_days_sales"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- More detailed reports or transaction list can go here -->
    <!-- For simplicity, we'll only show aggregated numbers directly in ReportsActivity/Fragment -->

</LinearLayout>